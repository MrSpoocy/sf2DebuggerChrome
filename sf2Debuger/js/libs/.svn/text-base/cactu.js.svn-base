(function () {//Init the main object if not already done
    if (!window.cactu) {
        window.cactu = {};
    }
    /**
     * Static class that manipulate some element on the page. make the link between script and navigator.
     * used to differentiate chrome extension from regular js
     */
    var cactu = window.cactu;
    /**
     * Generic function to get a cookie from the right tab
     * @param name string the name of the cookie to get
     * @param func function the function that will receive the data (asynchronous call)
     */
    cactu.getCookie = function (name, func) {
        throw 'Function "cactu.getCookie" not defined';
    }
    /**
     *
     * @param name
     * @param value
     * @param domain
     * @param path
     * @param expire
     * @param secure
     * @param func
     */
    cactu.setCookie = function (cookie, func) {
        throw 'Function "cactu.setCookie" not defined';
    }

    /**
     * Reload the current page
     */
    cactu.reloadPage = function () {
        throw 'Function "cactu.reload" not defined';
    }


    /**
     * Object used by setCookie and GetCookie
     * @param name
     * @param value
     * @param domain
     * @param path
     * @param expire
     * @param secure
     */
    cactu.cookie = function (name, value, domain, path, expire, secure) {
        this.name = name;
        this.value = decodeURIComponent(value);
        this.path = (path ? path : '/' );
        this.httponly = (secure ? true : false);
        this.expire = (expire instanceof Date ? expire : undefined);
        this.secure = (secure ? true : false);
    }
})();